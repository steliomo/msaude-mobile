<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="mz.co.txova.msaude.activities.ScheduleConsultationActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/consultation_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_layout"
            android:hint="Cidade"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbdfea"
            android:textStyle="italic|bold" />

        <AutoCompleteTextView
            android:id="@+id/consultation_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_layout"
            android:hint="Especialidade"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbdfea"
            android:textStyle="italic|bold" />

        <AutoCompleteTextView
            android:id="@+id/consultation_clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_layout"
            android:hint="Clínica"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbdfea"
            android:textStyle="italic|bold" />

        <AutoCompleteTextView
            android:id="@+id/consultation_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field_layout"
            android:hint="Médico"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbdfea"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/consultation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/field_layout"
                android:editable="false"
                android:hint="Data"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="#bbdfea"
                android:textStyle="italic|bold" />

            <ImageButton
                android:id="@+id/consultation_date_picker"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="6"
                android:background="#fff"
                android:src="@mipmap/ic_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/consultation_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:text="Pesquisar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="9pt"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/consultation_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_layout"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="9pt"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
