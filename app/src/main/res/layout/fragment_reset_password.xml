<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_reset_password_image_view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/fragment_reset_password_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Renovação da senha do utilizador"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="9pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/fragment_reset_password_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:src="@mipmap/ic_logo"
        app:layout_constraintEnd_toEndOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_reset_password_header_title" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_reset_password_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_reset_password_image_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_reset_password_logo">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email"
            android:drawableStart="@drawable/ic_email"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/fragment_reset_password_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_green_layout"
        android:drawableEnd="@drawable/ic_circle_check"
        android:drawableRight="@drawable/ic_circle_check"
        android:paddingRight="10dp"
        android:text="Submeter"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fragment_reset_password_cancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fragment_reset_password_email"
        app:layout_constraintTop_toBottomOf="@+id/fragment_reset_password_email" />

    <Button
        android:id="@+id/fragment_reset_password_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/round_red_layout"
        android:drawableEnd="@drawable/ic_circle_remove"
        android:drawableRight="@drawable/ic_circle_remove"
        android:paddingRight="10dp"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_reset_password_submit"
        app:layout_constraintEnd_toEndOf="@+id/fragment_reset_password_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragment_reset_password_submit"
        app:layout_constraintTop_toTopOf="@+id/fragment_reset_password_submit" />

</android.support.constraint.ConstraintLayout>


