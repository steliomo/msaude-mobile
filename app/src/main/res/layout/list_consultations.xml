<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/image_button"
        android:padding="8dp"
        android:src="@mipmap/ic_stethoscope_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/type_of_consultation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Consultation"
            android:textColor="#000"
            android:textSize="7pt"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doctor"
                android:textColor="#000"
                android:textSize="7pt"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/date_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="Health Facility"
                android:textAlignment="textEnd"
                android:textSize="5pt"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/health_facility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Health Facility"
                android:textColor="#000"
                android:textSize="7pt"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/time_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="Health Facility"
                android:textAlignment="textEnd"
                android:textSize="5pt"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>